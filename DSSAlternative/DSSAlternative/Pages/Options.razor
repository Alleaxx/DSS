@page "/Options"
@layout EditorLayout
@inherits DSSComponent

    <style>
        .rating-system {
        }

            .rating-system th {
                font-size: 0.95em;
                font-weight: 500;
                padding: 5px 0;
                border-bottom: 1px solid gainsboro;
            }

            .rating-system input {
                width: 90%;
                border: 0;
            }
    </style>

    <section>
        <h3>Настройки</h3>
        <section>
            <h4>Согласованность</h4>
            <div>
                <label for="border-cons">Граница согласованности</label><br />
                <input id="border-cons" type="number" @bind-value="@MatrixConsistenct.BorderConsistenct" />
            </div>
        </section>
        <section>
            <h4>Система опроса</h4>
            <p>
                Текущая система: @DSSApp.RatingSystem.Name
            </p>
            <div>
                <label for="amount">Количество градаций оценок:</label>
                <input id="amount" type="number" @bind-value="@DSSApp.RatingSystem.Amount" min="1" max="9" />
            </div>
            <section>
                <h5>Правила</h5>
                <table class="rating-system">
                    <colgroup>
                        <col style="width:10%" />
                        <col style="width:10%" />
                        <col style="width:30%" />
                        <col style="width:50%" />
                    </colgroup>
                    <tr>
                        <th>От >=</th>
                        <th>До</th>
                        <th>Имя</th>
                        <th>Стиль</th>
                    </tr>
                    @foreach (var rule in DSSApp.RatingSystem.Rules)
                    {
                        <tr>
                            <td>
                                <input type="number" @bind-value="@rule.FromVal" />
                            </td>
                            <td>
                                <input type="number" @bind-value="@rule.ToVal" />
                            </td>
                            <td>
                                <input type="text" @bind-value="@rule.Name" />
                            </td>
                            <td>
                                <input type="text" style="@rule.Style" @bind-value="@rule.Style" />
                            </td>
                        </tr>
                    }
                </table>
            </section>
        </section>
    </section>



