@inherits DSSProject
<h4>Оптимальные варианты</h4>
<section>
    <div class="example-section">
        <div class="example-block" style="background-color:#dfffdf"></div>
        <span class="example-description">
            - Лучшая альтернатива
        </span>
    </div>
    <div class="example-section">
        <div class="example-block" style="background-color:white"></div>
        <span class="example-description">
            - Обычная альтернатива
        </span>
    </div>
</section>

<section>
    <h4>Система опроса</h4>
    <p>
        Текущая система - @DSS.RatingSystem.Name
    </p>
    <div>
        Количество градаций оценок
        <input type="number" @bind-value="@DSS.RatingSystem.Amount" />
    </div>
    <section>
        <h5>Правила</h5>
        <table>
            <tr>
                <th>От >=</th>
                <th>До</th>
                <th>Имя</th>
                <th>Стиль</th>
            </tr>
            @foreach (var rule in DSS.RatingSystem.Rules)
            {
                <tr>
                    <td><input type="number" @bind-value="@rule.FromVal" /></td>
                    <td><input type="number" @bind-value="@rule.ToVal" /></td>
                    <td><input type="text" @bind-value="@rule.Name" /></td>
                    <td><input type="text" style="@rule.Style" @bind-value="@rule.Style" /></td>
                </tr>
            }
        </table>
    </section>

</section>

@if (!Problem.CorrectnessRels.AreRelationsCorrect)
{
    <b>Внимание!</b>
    <p>
        Отношения между элементами несогласованы! Результаты считаются недействительными до тех пор, пока все отношения не будут исправлены.
    </p>
}
else
{
    <NavLink class="navigation-link" href="@Res.Href">
        [ Анализ результатов ]
    </NavLink>
    <br />
    <br />
}
