@inherits DSSProject

    <style>
        .task-menu ul {
            list-style: none;
            padding: 0;
            margin-top: 0;
            display: flex;
            align-items: stretch;
            margin-bottom: 0;
        }

            .task-menu ul a {
                padding: 1px 8px;
                border-right: 1px solid gainsboro;
                text-decoration: none;
                height: 100%;
                
            }

                .task-menu ul a.active {
                    background-color: white;
                    background-color: gainsboro;
                    color: black;
                    font-weight: 600;
                }

                .task-menu ul a:hover {
                    color: black;
                }

        .task-menu a {
            cursor: pointer;
        }
    </style>
    <style>
        .task-menu {
            border-left: 1px solid gainsboro;
            border-right: 1px solid gainsboro;
            border-bottom: 1px solid gainsboro;
        }

        .task-menu-header {
            text-align: center;
            font-size: 1.15em;
        }

        .task-menu-element {
            display: flex;
            align-items: center;
            opacity: 75%;
        }

            .task-menu-element.active {
                opacity: 100%;
            }


        .task-element-sheme {
            flex-basis: 15%;
        }


        .task-element-header {
            flex-basis: 85%;
        }

        .task-element-name {
            font-size: 0.9em;
            margin: 0;
            font-weight: 500;
        }

        .task-element-descr {
            color: gray;
            font-size: 0.8em;
            margin: 3px 0;
        }

        a.active .task-element-descr {
            font-weight: normal;
        }

        .task-menu li {
            border-bottom: 1px solid gainsboro;
        }

        .add-task {
            font-size: 0.9em;
            border: 0;
            border-left: 1px solid lightgreen;
            border-right: 1px solid lightgreen;
            color: green;
            padding: 4px 1em;
            height: 100%;
            background-color: transparent;
            cursor: pointer;
            border-radius: 0;
        }
        .add-task:hover{
            background-color: lightgreen;
        }

        .remove-task{
            background-color:transparent;
            border: 0px solid gainsboro;
            cursor: pointer;
            align-self: flex-start;
            margin: 5px 0;
            padding: 5px 7px;
            color: darkred;
        }
        .remove-task:hover{
            background-color: lightpink;
        }
    </style>

<nav class="task-menu">
    <ul>
        @foreach (var project in DSSApp.Projects)
        {
            <li>
                <a class="task-menu-element @(project == DSSApp.Project ? "active" : "")" @onclick="@(() => { DSSApp.SelectProject(project); })" href="view">
                    <div class="task-element-sheme">
                        <DSSAlternative.Pages.Дополнительно.HierSheme Project="@project" />
                    </div>
                    <header class="task-element-header">
                        <h4 class="task-element-name">@project.ProblemActive.MainGoal.Name</h4>
                        <p class="task-element-descr">@project.Status</p>
                    </header>
                    <input class="remove-task" type="button" value="X" @onclick="@( () => DSSApp.RemoveProject(project))" />
                </a>
            </li>
        }
        <li>
            <input class="add-task" type="button" value="Создать" @onclick="@(() => DSSApp.AddProject(DSSExample.CreateNewProblem()))" />
        </li>
    </ul>
</nav>
